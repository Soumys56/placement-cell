
<link rel="stylesheet" href="/css/admin.css">

<h5 class="text-center mt-3">Result  List</h5>

<div class="container mt-4">
    <table class="table table-hover">
        <thead>
          <tr>
          
            
            <th scope="col">Name</th>
            <th scope="col">Company</th>
            <th scope="col">Date</th>
            <th scope="col">Resultstatus</th>
            <th scope="col">Result</th>
           
           
            
          </tr>
        </thead>
        <tbody>
          <% if(interview){%>
            <% for(i of interview) {%>
              <tr>
                
                <td> <%= i.student.name%> </td>
                <td> <%= i.company%> </td>
                <td> <%= i.date%> </td>
                <%if(i.results[0]){%>
                  <td> <%= i.results[0].result%> </td>
                  <%}else{%>
                       <td>null</td>
                      
                      <%}%>
                
                
                <% if(locals.user.id ) {%>
                  <td> 
                    <a href="/user/result/<%=i._id %>" class="btn btn-md">Result</a>
                </td>
                
                <%}else{%>
                  <td>
                    <a href="" class="btn btn-md">Result</a>
                  </td>
                 
                <%}%> 
              </tr>  
            <%}%>
            
            
            <%}else{%>
             <td>Result not present </td>

              <%}%>
           
         
        </tbody>
      </table>
</div>