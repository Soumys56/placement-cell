
<link rel="stylesheet" href="/css/student.css">


<div class="form-body">
    <div class="row">
        <div class="form-holder">
            <div class="form-content">
                <div class="form-items">
                    <h3>Update Student Details</h3>
                    <p>Fill in the data below.</p>
                    <form class="requires-validation" action="/user/updateinfo/<%=student.id%>" method="post">

                        <div class="col-md-12">
                           <input class="form-control" type="text" name="name" placeholder="Full Name" required>
                       
                        </div>

                        <div class="col-md-12">
                            <input class="form-control" type="email" name="email" placeholder="E-mail Address" required>
                        
                        </div>
                        
                        <div class="col-md-12">
                            <input class="form-control" type="text" name="college" placeholder="Enter college Name" required>
                           
                        </div>

                       <div class="col-md-12" >
                            <select class="form-select mt-3"  name="status" required>
                                  <option selected disabled>placement status</option>
                                  <option value="placed">Placed</option>
                                  <option value="not placed">Not Placed</option>
                                  
                           </select>
                    
                       </div>


                       <div class="col-md-12">
                          <input class="form-control" type="text" name="batch" placeholder="Enter the Bach No" required>
                         
                       </div>
                       <div class="col-md-12">
                        <input class="form-control" type="number" name="dsa" placeholder="Enter the dsa score" required>
                       
                     </div>

                     <div class="col-md-12">
                        <input class="form-control" type="number" name="web" placeholder="Enter the web score" required>
                       
                     </div>
                     <div class="col-md-12">
                        <input class="form-control" type="number" name="react" placeholder="Enter the react score" required>
                       
                     </div>

                      
              

                        <div class="form-button mt-3">
                            <button id="submit" type="submit" class="btn btn-primary">Register</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
